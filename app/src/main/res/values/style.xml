<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toastdownload">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stColorBackground">@color/colorPrimary</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stIconStart">@drawable/ic_download</item>
        <item name="stFont"></item>
    </style>

    <style name="toastcheck">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stColorBackground">@color/verifikasi</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stIconStart">@drawable/ic_check</item>
    </style>

    <style name="toasterror">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stColorBackground">@color/red</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stIconStart">@drawable/ic_close</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background"> @android:color/transparent</item>
    </style>


</resources>
